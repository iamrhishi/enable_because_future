# ============================================
# Enable Because Future - Environment Variables
# ============================================
# 
# SETUP INSTRUCTIONS:
# 1. Copy this file: cp .env.example .env
# 2. Fill in your actual values
# 3. NEVER commit the .env file!
#
# ============================================

# Gemini AI API
GEMINI_API_KEY=your_gemini_api_key_here

# Google Custom Search API
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CSE_ID=your_custom_search_engine_id_here

# MySQL Database
MYSQL_HOST=localhost
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password_here
MYSQL_DATABASE=hello_db

# External API Credentials (becausefuture.tech services)
BG_SERVICE_USERNAME=becausefuture
BG_SERVICE_PASSWORD=your_bg_service_password_here
TRYON_SERVICE_USERNAME=becausefuture
TRYON_SERVICE_PASSWORD=your_tryon_service_password_here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# Server Configuration
HOST=0.0.0.0
PORT=5000
