# ============================================
# Because Future Backend - Environment Variables
# ============================================
# Copy this file to .env and fill in your values:
# cp env.template .env

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_PATH=database.db

# ============================================
# FLASK CONFIGURATION
# ============================================
FLASK_ENV=development
FLASK_DEBUG=True

# Secret key for Flask sessions (REQUIRED)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-generate-secure-random-key

# ============================================
# JWT AUTHENTICATION (REQUIRED)
# ============================================
# JWT secret key for token signing (REQUIRED)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=your-jwt-secret-key-here-generate-secure-random-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ============================================
# BACKGROUND REMOVAL SERVICE (REQUIRED)
# ============================================
BG_SERVICE_URL=https://api.becausefuture.tech/bg-service/api/remove
BG_SERVICE_USERNAME=becausefuture
BG_SERVICE_PASSWORD=becausefuture!2025

# ============================================
# MIXER SERVICE - TRY-ON (REQUIRED)
# ============================================
MIXER_SERVICE_URL=https://api.becausefuture.tech/mixer-service/tryon
MIXER_SERVICE_USERNAME=becausefuture
MIXER_SERVICE_PASSWORD=becausefuture!2025

# ============================================
# GEMINI/NANO BANANA (RECOMMENDED per context.md)
# ============================================
# Get API key from: https://makersuite.google.com/app/apikey
# Required for Gemini/Nano Banana image editing
GEMINI_API_KEY=

# AI Model Provider: 'gemini' (recommended) or 'mixer' (fallback)
# Per context.md, Gemini/Nano Banana is the recommended solution
AI_MODEL_PROVIDER=gemini

# Gemini Model: 'gemini-1.5-flash' (faster, cheaper) or 'gemini-1.5-pro' (higher quality)
# Or 'gemini-2.5-flash-image' for Nano Banana (if available)
GEMINI_MODEL_NAME=gemini-1.5-flash

# ============================================
# CLOUD STORAGE (GCS/S3) - Optional
# ============================================
# Storage provider: 'gcs' (default) or 's3' or leave empty to disable (uses base64 fallback)
# Default is GCS (Google Cloud Storage)
STORAGE_PROVIDER=gcs

# Google Cloud Storage Configuration (if STORAGE_PROVIDER=gcs)
GCS_BUCKET_NAME=
GCS_CREDENTIALS_PATH=
# Path to GCS service account JSON file (optional, uses default credentials if not set)

# AWS S3 Configuration (if STORAGE_PROVIDER=s3 - for future use)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=us-east-1

# ============================================
# GOOGLE OAUTH (OPTIONAL - For Google Sign-In)
# ============================================
# Get credentials from: https://console.cloud.google.com/apis/credentials
# Leave empty if not using Google Sign-In
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
MAX_UPLOAD_SIZE=6291456
WARDROBE_FOLDER=../frontend/public/images/wardrobe

# ============================================
# CORS CONFIGURATION
# ============================================
# Allowed origins (comma-separated, use '*' for development)
CORS_ORIGINS=*

# ============================================
# JOB QUEUE CONFIGURATION
# ============================================
# Maximum number of jobs in queue (per context.md quality guardrails)
MAX_QUEUE_SIZE=50

# Job timeout in seconds (per context.md: 120 seconds)
JOB_TIMEOUT_SECONDS=120

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_DIR=logs
# Logs are automatically rotated daily
# Files: logs/app.log, logs/errors.log
# Keeps 30 days of history

