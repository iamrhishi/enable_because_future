# ============================================
# Because Future Backend - Environment Variables
# ============================================
# Copy this file to .env and fill in your values:
# cp env.template .env

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_PATH=database.db

# ============================================
# FLASK CONFIGURATION
# ============================================
FLASK_ENV=development
FLASK_DEBUG=True

# Secret key for Flask sessions (REQUIRED)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-generate-secure-random-key

# ============================================
# JWT AUTHENTICATION (REQUIRED)
# ============================================
# JWT secret key for token signing (REQUIRED)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=your-jwt-secret-key-here-generate-secure-random-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ============================================
# GOOGLE GEMINI (NANO BANANA) API CONFIGURATION (REQUIRED)
# ============================================
# Used for:
# 1. Background removal from avatar images
# 2. Try-on processing (placing garments on users)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL_NAME=gemini-2.5-flash-image
# Nano Banana image model (verified for background removal and try-on)
# Alternative: gemini-3.0-pro-image (Nano Banana Pro - higher quality)

# ============================================
# LOCAL FILE STORAGE CONFIGURATION
# ============================================
# Base directory for storing images (relative to backend directory or absolute path)
# Images will be organized in subdirectories: tryon-results/, avatars/, wardrobe/
IMAGES_DIR=images

# Base URL for serving images (used in API responses)
# This should match your Flask static file serving configuration
IMAGES_BASE_URL=/images

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
MAX_UPLOAD_SIZE=6291456
WARDROBE_FOLDER=../frontend/public/images/wardrobe

# ============================================
# CORS CONFIGURATION
# ============================================
# Allowed origins (comma-separated, use '*' for development)
CORS_ORIGINS=*

# ============================================
# JOB QUEUE CONFIGURATION
# ============================================
# Maximum number of jobs in queue (per context.md quality guardrails)
MAX_QUEUE_SIZE=50

# Job timeout in seconds (per context.md: 120 seconds)
JOB_TIMEOUT_SECONDS=120

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_DIR=logs
# Logs are automatically rotated daily
# Files: logs/app.log, logs/errors.log
# Keeps 30 days of history

# ============================================
# SCRAPING / WEB EXTRACTION CONFIGURATION (OPTIONAL)
# ============================================
# Proxy support for web scraping (helps avoid bot detection)
# Set ENABLE_PROXY=true to enable proxy support (required)
ENABLE_PROXY=True

# HTTP/HTTPS proxy URLs (if using proxy)
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=https://proxy.example.com:8080

# Proxy authentication (if required)
# PROXY_USERNAME=your-proxy-username
# PROXY_PASSWORD=your-proxy-password

# Proxy list for rotation (comma-separated)
# PROXY_LIST=http://proxy1.example.com:8080,http://proxy2.example.com:8080

# ============================================
# SCRAPE.DO CONFIGURATION (OPTIONAL)
# ============================================
# Scrape.do for bypassing bot detection with residential proxies and JavaScript rendering
# Used for Zara and other protected sites
# Get your API key from: https://dashboard.scrape.do/settings
SCRAPE_DO_API_KEY=your-scrape-do-api-key-here
SCRAPE_DO_ENABLED=False

